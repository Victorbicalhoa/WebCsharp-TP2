@page
@model TP2.Pages.Exercicios.Exercicio01.CityManager.CreateCityModel

<h2>Cadastro de Cidade Turística</h2>

<form method="post">
    <label for="cityName">Nome da Cidade:</label>
    <input type="text" id="cityName" asp-for="CityName" required />
    <button type="submit">Enviar</button>
</form>

@if (Model.CityName != null)
{
    <p>Você cadastrou: <strong>@Model.CityName</strong></p>
}