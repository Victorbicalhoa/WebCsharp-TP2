@page
@model TP2.Pages.Exercicios.Exercicio10.SaveNoteModel

<h2>Salvar Nota</h2>

<form method="post" class="form-group">
    <label asp-for="NoteInput.Content">Escreva sua nota:</label>
    <textarea asp-for="NoteInput.Content" class="form-control" rows="5" required></textarea>
    <span asp-validation-for="NoteInput.Content" class="text-danger"></span>

    <button type="submit" class="btn btn-primary">Salvar Nota</button>
</form>

@if (ViewData["Message"] != null)
{
    <p class="response-message">@Html.Raw(ViewData["Message"])</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}