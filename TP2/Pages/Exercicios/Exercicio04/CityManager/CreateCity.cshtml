@page
@model TP2.Pages.Exercicios.Exercicio04.CityManager.CreateCityModel

<h2>Cadastro de Cidade Turística</h2>

<form method="post" class="form-group">
    <label asp-for="City.CityName">Nome da Cidade:</label>
    <input asp-for="City.CityName" class="form-control" required />
    <span asp-validation-for="City.CityName" class="text-danger"></span>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (ViewData["Message"] != null)
{
    <p><strong>@ViewData["Message"]</strong></p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}